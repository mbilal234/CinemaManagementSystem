<div class="container mt-5">
  <h1 class="mb-5">Enter a New Employee</h1>
  <form action="addEmployee" method="post" class="form-group">
    <label for="firstName">First Name</label>
    <input type="text" name="firstName" id="firstName" class="form-control" required>
    <label for="lastName">Last Name</label>
    <input type="text" name="lastName" id="lastName" class="form-control" required>
    <label for="email">Email Address</label>
    <input type="email" name="email" id="email" class="form-control" required>
    <label for="phone">Phone Number</label>
    <input type="number" pattern = "\d{11,11}" name="phone" id="phone" class="form-control" required>
    <label for="cnic">CNIC Number</label>
    <input type="number" pattern = "\d{13,13}" name="cnic" id="cnic" class="form-control" required>
    <label for="password">Password</label>
    <input type="password" name="password" required id="password" class="form-control">
    <label for="jobTitle">Job Title</label>
    <input type="text" name="jobTitle" id="jobTitle" class="form-control" required>
    <button class="btn btn-primary mt-3">Submit</button>
  </form>
