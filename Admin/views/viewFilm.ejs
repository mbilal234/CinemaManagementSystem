      <h3><%= name %></h3>
      <img src="<%=cover_img%>" alt="film cover" class="img-fluid">
      <h2><%= genre %></h2>
      <h2><%= desc_ %></h2>
      <h2>Run Time: <%= run_time %> minutes</h2>
