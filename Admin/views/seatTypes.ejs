<%- include('partials/navbar') %>

<div class="container mt-5">

<h1 class = "mx-auto mb-3">Seat Types</h1>
<% if (iterator >= 0){ %>
    <h2>Seat Types Present</h2>
    <% while(iterator>=0) { %>
        <h4><%= seatTypes[iterator--].Type %></h4>
    <% } %>
<% } %>
<form action="/addSeatType" method="post" class = "form-horizontal">
    <label for="seatType" class = "mb-3 mt-3">Enter name of the Seat Type</label>
    <input type="text" name="seatType" id="seatType" class = "form-control" required>
    <button class = "btn btn-primary mt-3">Submit</button>
</form>

</div>