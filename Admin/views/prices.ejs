<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  </head>  
<%- include('partials/navbar') %>

<div class="container mt-5">
<h1 class = "mx-auto mt-3">Ticket Prices</h1>

<table class="table">
  <tr>
    <th>Ticket Type</th>
    <th>Price</th>
  </tr>
  <% while(iterator >= 0){ %>
    <tr>
      <td><%= ticketType[iterator] %></td>
      <td><%= price[iterator--] %></td>
    </tr>
  <% } %>
</table>

<h1>Update Prices</h1>
<form action="/updatePrices" method="post" class="form-horizontal">
  <div class="form-group">
    <label for="showtype" class="col-sm-2 control-label">Enter Show Type</label>
    <div class="col-sm-10">
      <input type="text" name="showtype" id="showtype" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label for="seattype" class="col-sm-2 control-label">Enter Seat Type</label>
    <div class="col-sm-10">
      <input type="text" name="seattype" id="seattype" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">Enter Price</label>
    <div class="col-sm-10">
      <input type="number" min="0" name="price" id="price" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>