<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="container mt-5">
            <h1 class="mb-5 mt-5 mx-auto">Analytics</h1>
        </div>

        <form action="">
            <label for="year">Year</label>
            <input type="number" name="year" id="year" class="form-control" required>
            <button class="btn btn-primary mt-3" onClick="updateData()">Submit</button>
        </form>

        <canvas id="myChart" style="width:100%;max-width:700px"></canvas>

        <script>
            function updateData() {
                console.log("update Entered")
                var barvalues = [["January", "200"]];
                var xValues = [];
                var yValues = [];
                barvalues.forEach(function (value) {
                    xValues.push(value[0]);
                    yValues.push(value[1]);
                });
                var barColors = "blue";

                new Chart("myChart", {
                    type: "bar",
                    data: {
                        labels: xValues,
                        datasets: [{
                            backgroundColor: barColors,
                            data: yValues
                        }]
                    },
                    options: {
                        responsive: true,
                        legend: {
                            position: 'bottom',
                        },
                        hover: {
                            mode: 'label'
                        },
                        scales: {
                            xAxes: [{
                                display: true,
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Month'
                                }
                            }],
                            yAxes: [{
                                display: true,
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Sales (Rs.)'
                                },
                                ticks: {
                                    beginAtZero: true,
                                }
                            }]
                        },
                        title: {
                            display: true,
                            text: "Monthly Ticket Sales"
                        }
                    }
                });
            }

        </script>
</body>

</html>